<form action="/<%= @painting[:id] %>" method="POST">
	<% if(@painting[:id] != "") %>
		<input type="hidden" name="_method" value="PUT">
	<% end %>
	<div>
		<label>Title</label>
		<input type="text" name="title" placeholder="Enter a Title" value="<%= @painting[:title] %>">
	</div>
	<div>
		<label>Painting</label>
		<textarea name="image" placeholder="Image URL"><%= @painting[:image] %></textarea>
	</div>
	<div>
		<input type="submit" value="Save Painting">
	</div>
	
</form>