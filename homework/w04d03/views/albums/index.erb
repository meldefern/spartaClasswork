<% @albums.each do |album| %>
	<div class=container>
		<div class="row">
			<div class="col-md-10" class="col-md-offset-2">
				<h3>
					<a href="/<%= album[:id] %>"><%= album[:title] %></a>
				</h3>
				<p><%= album[:release] %></p>
				<div class="album-cover">
					<img class="album-cover" src="<%= album[:cover] %>">
				</div>
				<p><%= album[:review] %></p>
			</div>
		</div>
	</div>
<% end %>